<Window x:Class="Work1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work1"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="730" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="PageFirst" Content="Задание 1" Click="PageFirst_Click" Style="{StaticResource ButtonAlert}"/>
            <Button Name="PageSecond" Content="Задание 2" Click="PageSecond_Click" Style="{StaticResource ButtonAlert}"/>
            <Button Name="PageThird" Content="Задание 3" Click="PageThird_Click" Style="{StaticResource ButtonAlert}"/>
        </StackPanel>
        <Frame Name="MyFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
